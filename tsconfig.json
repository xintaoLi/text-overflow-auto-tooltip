{
  "compilerOptions": {
    "jsx": "preserve",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "baseUrl": "./",
    "importHelpers": true,
    "target": "esnext",
    "useDefineForClassFields": false,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "noImplicitAny": false,
    "outDir": "**/dist",
  },
  "typeRoots": ["./@types/*","@types/*", "crypto-js", "types/*"],
  "include": ["src"],
  "exclude": ["node_modules", "build/**/*"],
}
